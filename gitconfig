[core]
	editor = vim
	excludesfile = /Users/cole/.gitignore
[color]
	ui = 1
[push]
	default = current
[alias]
	st = status -sb
	ls = !git log --all --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        undo = reset --soft HEAD^
        merge = merge --no-ff --interactive
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -rFX
	show = diff-so-fancy | less --tabs=1,5 -rFX
