# source my bash profile by opening each window as a login shell
shell -$SHELL

# use more colors
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E38;5;%dm'
defbce "on"

# change escape key
escape ``

autodetach on
defscrollback 10000

startup_message off
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."

vbell on
vbell_msg "Hey - something's ringing on %t (%n)"
activity "Hey - something's moving in %t (%n)"
vbellwait 2
msgwait 2

hardstatus alwayslastline "%{=wb}$USER @ %H >> %-Lw%{+b kc}%50>%n%f* %t%{-}%+Lw%<"

shelltitle "shell"

# saves screen split layout for detach/reattach
# layout save default

# get rid of silly xoff stuff
bind s split

# default windows
screen -t htop
stuff "htop ^M"
screen -t todo
stuff "todo ^M"
screen -t biostat
stuff "biostat ^M"
screen -t shell
screen -t cchmc_cluster
stuff "ssh cchmc ^M "
select 1


# layouts
layout autosave on

layout new one
split -v
select 1
resize -30
focus right
select 2
split
focus down
select 3
focus left


layout attach one
layout select one


# F2 puts Screen into resize mode. Resize regions using hjkl keys.
bindkey "^[OQ" eval "command -c rsz" # enter resize mode
# use hjkl keys to resize regions
bind -c rsz h eval "resize -h -1" "command -c rsz"
bind -c rsz j eval "resize -v -1" "command -c rsz"
bind -c rsz k eval "resize -v +1" "command -c rsz"
bind -c rsz l eval "resize -h +1" "command -c rsz"
# quickly switch between regions using tab and arrows
bind -c rsz \t    eval "focus"       "command -c rsz" # Tab
bind -c rsz -k kl eval "focus left"  "command -c rsz" # Left
bind -c rsz -k kr eval "focus right" "command -c rsz" # Right
bind -c rsz -k ku eval "focus up"    "command -c rsz" # Up
bind -c rsz -k kd eval "focus down"  "command -c rsz" # Down
# then use escape key to exit resize mode


