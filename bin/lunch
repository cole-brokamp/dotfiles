#!/bin/bash

echo -e "\n\nHave a good lunch! ðŸ˜ƒ"

echo -e "\n\n updating brew packages"
echo "=================="
if test $(which brew); then
    echo -e  "\n\nupdating homebrew..."
    brew update
    echo -e "\n\nupgrading formulas..."
    brew upgrade
    echo -e "\n\ncleaning up..."
    brew cleanup
fi

echo -e "\n\n updating Node packages"
echo "=================="
npm install npm -g; npm update -g

echo -e "\n\n updating Vim plugins"
echo "================="
vim +PluginUpdate +qall
vim +PluginClean +qall

echo -e "\n\n updating tmux plugins"
echo "================="
~/.tmux/plugins/tpm/bin/update_plugins all
~/.tmux/plugins/tpm/bin/clean_plugins

echo -e "\n\nDone."
echo "========="

