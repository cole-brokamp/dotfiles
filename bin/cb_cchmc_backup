#!/bin/bash

# connect to drive (this relies on Finder)
  # con: must have Finder running
  # pro: uses stored username/password
open -g 'smb://rds6.cchmc.org/DBE-64/CB'
# mount_smbfs //broeg1@rds6.cchmc.org/DBE-64/CB /Volumes

# give finder time to connect and mount drive
sleep 10
# rsync $HOME to this backup folder
rsync -a --delete --progress --exclude='cache/' --exclude='.git/' /Users/cole/Desktop/ /Volumes/CB/Desktop && \
rsync -a --delete --progress --exclude='cache/' --exclude='.git/' /Users/cole/Biostatistics/ /Volumes/CB/Biostatistics && \
rsync -a --delete --progress --exclude='cache/' --exclude='.git/' /Users/cole/Documents/ /Volumes/CB/Documents && \
rsync -a --delete --progress --exclude='cache/' --exclude='.git/' /Users/cole/dotfiles/ /Volumes/CB/dotfiles && \
rsync -a --delete --progress --exclude='cache/' --exclude='.git/' /Users/cole/Downloads/ /Volumes/CB/Downloads
